</div>

<script>
    var windowUrl = window.location.pathname;
    var windowUrl = windowUrl.split('/')[1];
    if(windowUrl === 'zh'){
    localStorage.setItem("lang", windowUrl);
    }else{
        localStorage.setItem("lang", "en");
    }

    var windowTagUrl = window.location.pathname.split('/');
    
    var	windowTagUrl2 = windowTagUrl[1];
    if(windowTagUrl2 == 'tag'){
      windowTagUrl2 = windowTagUrl[2].split('-')[0];
    }

     if(windowTagUrl2 === 'zh'){
      localStorage.setItem("lang", windowTagUrl2);
    }else{
      localStorage.setItem("lang", "en");
    }


    if(localStorage.getItem('lang') == 'en'){
    
    var mobileNavEn = document.querySelector('.mobile-nav-en');
        mobileNavEn.style.display = "block";
    var mobileNavZh = document.querySelector('.mobile-nav-zh');
        mobileNavZh.style.display = "none";
        document.querySelector(".tag-acc-option-zh").style.display = "none";
    }else{
    var mobileNavEn = document.querySelector('.mobile-nav-en');
        mobileNavEn.style.display = "none";
    var mobileNavZh = document.querySelector('.mobile-nav-zh');
        mobileNavZh.style.display = "block";
        document.querySelector(".acc-option-en").style.display = "none";
        document.querySelector(".tag-acc-option-en").style.display = "none";
        
    }

    if(localStorage.getItem('lang') == 'en'){
    
    var NavEn = document.querySelector('.nav-en');
        NavEn.style.display = "block";
    var NavZh = document.querySelector('.nav-zh');
        NavZh.style.display = "none";

        document.querySelector(".acc-option-zh").style.display = "none";
    }else{
    var NavEn = document.querySelector('.nav-en');
        NavEn.style.display = "none";
        document.querySelector(".acc-option-en").style.display = "none";
    }

    if(localStorage.getItem('lang') == 'en'){
    
    var NavLogoEn = document.querySelector('.nav-logo-en');
        NavLogoEn.style.display = "block";
    var NavLogoZh = document.querySelector('.nav-logo-zh');
        NavLogoZh.style.display = "none";
    }else{
    var NavLogoEn = document.querySelector('.nav-logo-en');
        NavLogoEn.style.display = "none";
    }
</script>