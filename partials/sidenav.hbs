                <a data-portal="signin" class="button mr-2 is-black text-sm font-medium" href="#">{{t "登錄"}}</a>
                <a data-portal="account/plans" class="button is-primary text-sm font-medium" href="#">{{t "訂閱"}}</a>
            </div>
            {{/unless}}{{/if}}
        </div>

        <div class="acc-option-en">
            {{#if @site.members_enabled}}{{#unless @member}}
            <div class="py-4 flex justify-center md:hidden">
                <a data-portal="signin" class="button mr-2 is-black text-sm font-medium" href="#">{{t "Log in"}}</a>
                <a data-portal="account/plans" class="button is-primary text-sm font-medium" href="#">{{t "Subscribe"}}</a>
