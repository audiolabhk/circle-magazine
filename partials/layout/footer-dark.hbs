<footer class="footer pt-10">
    <section class="mx-auto container">
        <div class="row grid grid-cols-1 md:grid-cols-2 lg:flex flex-wrap flex-col md:flex-row justify-between gap-12 md:gap-6 pb-8">
            {{!-- About --}}
            <div class="footer-items w-full lg:w-1/3">
                <h3 class="text-white mb-5 text-xl">{{t "About Us"}}</h3>
                <p class="mb-4 text-gray-400">{{@site.description}}</p>

                {{!-- Social Media - partilas/widget/social-media.hbs --}}
                {{> "widget/social-media" class="footer-social-media"}}
            </div>

            {{!-- members subscribe --}}
            <div class="footer-items w-full lg:w-1/3">
                <h3 class="text-white mb-5 text-xl">{{t "Sign up for our newsletter"}}</h3>
                <p class="mb-4 text-gray-400">{{t "Be the first to know exciting updates and exclusive promotions from Circle."}}</p>

                {{!-- Form subscribe --}}
                <form class="simply-form" data-members-form="submit">
                    <input
                        class="footer-form-input"
                        data-members-email
                        type="email"
                        placeholder="{{t "youremail@example.com"}}"
                        aria-label="{{t "youremail@example.com"}}"
                        autocomplete="off"
                        required
                    />

                    <button class="button is-primary w-full mt-4" type="submit">
                        <span class="button-content">Continue</span>
                        {{> "icons/loader"}}
                    </button>

                    {{!-- success --}}
                    <div class="message-success p-2 rounded-md mt-4 hidden text-sm">
                        <span class="bg-success w-3 h-3 rounded-full inline-block"></span>
                        {{{t "<strong>Great!</strong> Check your inbox and click the link to confirm your subscription"}}}
                    </div>

                    {{!-- error --}}
                    <div class="message-error p-2 rounded-md mt-4 hidden text-sm">
                        <span class="bg-danger w-3 h-3 rounded-full inline-block"></span>
                        {{t "Please enter a valid email address!"}}
                    </div>
                </form>
            </div>
        </div>
    </section>
</footer>