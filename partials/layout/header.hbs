<header class="header js-header header-en h-16 w-full text-sm flex items-center sticky top-0 z-20">
    <div class="header-wrap mx-auto flex items-center flex-auto px-4 w-full max-w-extreme">
        {{!-- Logo --}}
        <div class="header-left mr-5 flex flex-1 items-center">
            <a class="nav-logo-en" href="{{@site.url}}"
                class="header-logo inline-block leading-none godo-tracking"
                data-event-category="Header"
                data-event-action="Logo"
                data-event-label="Click"
                data-event-non-interaction="true">
                {{#if @site.logo}}
                    <img src="{{img_url @site.logo size="m"}}" class="header-logo-img max-h-9 logo-default" alt="{{@site.title}}" width="115" height="30"/>
                {{else}}
                    <span class="text-3xl font-bold text-logo">{{@site.title}}</span>
                {{/if}}
            </a>
            <a class="nav-logo-zh" href="{{@site.url}}/zh/"
                class="header-logo inline-block leading-none godo-tracking"
                data-event-category="Header"
                data-event-action="Logo"
                data-event-label="Click"
                data-event-non-interaction="true">
                {{#if @site.logo}}
                    <img src="{{img_url @site.logo size="m"}}" class="header-logo-img max-h-9 logo-default" alt="{{@site.title}}" width="115" height="30"/>
                    {{!-- <img src="{{asset "images/logo-dark-mode.png"}}" class="header-logo-img max-h-9 hidden logo-dark-mode" alt="" width="115" height="30"/> --}}
                {{else}}
                    <span class="text-3xl font-bold text-logo">{{@site.title}}</span>
                {{/if}}
            </a>
            <div class="nav-en lg:ml-6">
                {{!-- Navigation--}}
                {{#if @site.navigation}}
                    {{#if hasDropDown}}
                        {{navigation navigationDropDown=true}}
                    {{else}}
                        {{navigation}}
                    {{/if}}
                {{/if}}
            </div>

            <div class="nav-zh hidden lg:block lg:ml-6">
                {{!-- Navigation --}}
            
                {{#if @site.secondary_navigation}}
                    {{#if hasDropDown}}
                        {{navigation type="secondary" navigationDropDown=true}}
                    {{else}}
                        {{navigation type="secondary"}}
                    {{/if}}
                {{/if}}
            </div>
        </div>

        


            <div class="lang">{{> "langswitcher"}}</div>
        <div class="header-right flex-none flex justify-end items-center">
            {{!-- Light and Dark Mode --}}
            <a role="button" class="js-dark-mode button is-white items-center mr-2" aria-label="Dark and Light Mode">
                <svg class="icon icon--moon m-0" style="margin-right:calc(-0.5em - 1px)"><use xlink:href="#icon-moon"></use></svg>
                <svg class="icon icon--sunny m-0 hidden" style="margin-left:calc(-0.5em - 1px)"><use xlink:href="#icon-sunny"></use></svg>
            </a>

            {{!-- Toggle Search --}}
            <a href="#/search"
                role="button"
                aria-label="Toggle Search"
                class="godo-tracking button is-white mr-2"
                aria-haspopup="true"
                data-event-category="Header"
                data-event-action="Search"
                data-event-label="Click"
                data-event-non-interaction="true"
                data-ghost-search>
                <svg class="icon icon--search"><use xlink:href="#icon-search"></use></svg>
            </a>
            <div class="tag-acc-option-en flex">
                {{!-- Menu User Account --}}
                {{#if @site.members_enabled}}{{> "layout/account-menu" signedinas="Signed in as" account="Account" logout="Log out" subscribe="Subscribe" login="Log in"}}{{/if}}
            </div>

            <div class="tag-acc-option-zh flex">
                {{!-- Menu User Account --}}
            {{#if @site.members_enabled}}{{> "layout/account-menu" signedinas="登錄為" account="帳戶" logout="退出登錄" subscribe="訂閱" login="登錄"}}
            {{/if}}
            </div>

            {{!-- Toggle Menu --}}
            <a href="javascript:;" role="button" aria-label="Show Navigation Menu" class="js-menu-toggle menu-burger button is-white relative lg:hidden"><span></span><span></span><span></span></a>
        </div>
    </div>
</header>

