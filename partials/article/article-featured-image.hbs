<figure class="post-image {{class}}">
    <img class="mx-auto simply-zoom"
        srcset="{{img_url image size="s"}} 300w,
                {{img_url image size="m"}} 600w,
                {{img_url image size="l"}} 1000w,
                {{img_url image size="xl"}} 2000w"
        sizes="(max-width: 400px) 350px,(max-width: 730px) 600px, (max-width: 1600px) 100vw"
        src="{{img_url image size="xl"}}"
        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
        width="1200"
        height="628"
    />
    {{#if feature_image_caption}}<figcaption class="post-figcaption">{{feature_image_caption}}</figcaption>{{/if}}
</figure>